{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/smart-lint.sh",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/smart-test.sh",
            "timeout": 300000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/enhanced-ntfy-notifier.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification-bell.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
